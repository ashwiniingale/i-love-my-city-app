<!DOCTYPE html>
<html>
  <head>
    <title><%= titleCity %></title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/images/favicon.jpg" type="image/x-icon">
    <link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="//use.edgefonts.net/lobster.js"></script>
 
</head>

  <body>
    <h1 class="headingFont" align="center" >Welcome to <%= titleCity %></h1>
    

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
         <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar" ></span>
              <span class="icon-bar" ></span>
              <span class="icon-bar" ></span>
           </button>
           <a href="/" class="navbar-brand">iLoveMyCity!</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="/aurangabad">Aurangabad</a></li>
              <li><a href="/mumbai">Mumbai</a></li>
              <li><a href="/nashik">Nashik</a></li>
              <li><a href="/pune">Pune</a></li>
            </ul>
        </div>
     </div>
    </div>


    <br/><br/><br/>



    <div class="container">
      <div class="row">
         <div class="col-md-12">
            <p class="headingFont" align="center" >
              <%=heading%>
            </p>
         </div>
       </div>
    </div>

    <br/>
    <div class="container">
        <div class="row">
          <% for(var i = 1; i <=numberOfImages; i++) { %>
            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="/images/<%=cityName%>/<%=cityName%>-<%=i%>.jpg" class="img-responsive styleImg" alt="iLoveMyCity"/>
                </div>
             </div>
          <% } %>
          
      </div>
    </div>

    <script src="/javascripts/jquery-1.11.3.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>

  </body>
</html>

